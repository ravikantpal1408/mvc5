@model IEnumerable<Foothill.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers:</h2>


<div class="container">
    <div class="row">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th><b>Customer Name</b></th>
                    <th><b>Membership Type</b></th>
                    <th><b>Discount Rate</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(items.Name, "Edit", "Customer", new{ Id=items.Id},null)</td>
                        <td>@items.MembershipType.Name </td>
                        <td><strong>@items.MembershipType.DiscountRate %</strong></td>
                        </tr>
                }

            </tbody>

        </table>

    </div>

</div>

